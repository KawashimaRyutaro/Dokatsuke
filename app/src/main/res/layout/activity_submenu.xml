<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="143dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="180dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="260dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="280dp" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline_A6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="360dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline_A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline_A2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="220dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline_A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="480dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline_A4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/button_uti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="打ち合わせ / セミナー"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_A3"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_A4"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_A2"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_A3"
        />

    <Button
        android:id="@+id/button_hitatu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="上記以外"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_A5"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_A6"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_A2"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_A3"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="訪問の目的を選択してください"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_A2"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_A4"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_A1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_A1" />
</android.support.constraint.ConstraintLayout>